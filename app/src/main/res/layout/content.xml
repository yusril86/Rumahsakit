<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp"

    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_below="@+id/tv_id"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="16dp"
            />

        <TextView
            android:layout_marginLeft="8dp"
            android:text="Nama"
            android:id="@+id/tv_nama"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_no"
            />
        <!--    <TextView-->
        <!--        android:layout_marginLeft="8dp"-->
        <!--        android:id="@+id/tv_jeniskelamin"-->
        <!--        android:layout_marginBottom="5dp"-->
        <!--        android:textStyle="bold"-->
        <!--        android:textSize="16dp"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="Jenis Kelamin"-->
        <!--        android:layout_below="@+id/tv_nama"-->
        <!--        />-->
        <TextView
            android:textColor="#B40428"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_nip"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIP"
            android:layout_below="@+id/tv_nama"
            />
        <TextView
            android:textColor="#09E737"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_tmt"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masa Kerja"
            android:layout_below="@+id/tv_nip"
            />
        <TextView
            android:textColor="#3F51B5"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_keterangan"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gelar"
            android:layout_below="@+id/tv_tmt"
            />
        <TextView
            android:textColor="#09E737"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_masa_kerja"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masa Kerja"
            android:layout_below="@+id/tv_keterangan"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>